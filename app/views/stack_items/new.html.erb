<% provide(:title, 'New Item') %>

<%= form_for([@sub, @comment]) do |f| %>
<%= f.text_area :comment, :style => "width:550px;", :placeholder => "Comment here" %>
<br />
<%= f.hidden_field :sub_id, :value => @sub.id %>
<%= f.hidden_field :author_id, :value => current_user._id %>

<%= f.submit "Submit" %>
<% end %>
